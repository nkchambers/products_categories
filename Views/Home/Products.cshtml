@using products_categories.Models;
@model Product;

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
        <title>Products & Categories</title>
    </head>

    <body>
        <div id="container">
            
            <div class="header d-flex mb-5 mt-5">
                <h1 style="margin-left: 700px;"><a href="/">Products</a> | <a href="/categories">Categories</a></h1>
            </div>

            <div class="body d-flex">
                
                <div class="col-left">
                    <h2>New Product</h2>

                    <form asp-action="CreateProduct" style="font-size: 20px; display: flex; align-items: center; justify-content: evenly; font-weight: bold;">
                        <div class="mb-3">
                            <span asp-validation-for="Name" class="text-danger"></span><br>
                            <label asp-for="Name"></label><br>
                            <input asp-for="Name">
                        </div>
                        <div class="mb-3">
                            <span asp-validation-for="Price" class="text-danger"></span><br>
                            <label asp-for="Price"></label><br>
                            <input asp-for="Price">
                        </div>
                        <div class="mb-5">
                            <span asp-validation-for="Price" class="text-danger"></span><br>
                            <label asp-for="Price"></label><br>
                            <input asp-for="Price">
                        </div>
                
                        <input class="btn btn-dark" type="submit" value="Add Dish" style="padding: 5px 20px; margin-bottom: -450px; font-size: 20px;">
                    </form>
                </div>
                <div class="col-right">
                </div>
            </div>
        </div>
    </body>
</html>